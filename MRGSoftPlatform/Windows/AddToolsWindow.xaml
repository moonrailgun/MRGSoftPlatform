<Window x:Class="MRGSoftPlatform.Windows.AddToolsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AddTools" Height="300" Width="300">
    <Grid>
        <Label Content="工具路径：" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Label Content="工具贴图：" HorizontalAlignment="Left" Margin="10,40,0,0" VerticalAlignment="Top"/>
        <Button Content="添加" HorizontalAlignment="Left" Margin="10,233,0,0" VerticalAlignment="Top" Width="272" Height="26"/>
        <TextBox Name="ToolPath" HorizontalAlignment="Left" Height="23" Margin="85,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="197" AllowDrop="True" Drop="OnToolPathDrop" DragEnter="OnToolPathDragEnter" />
        <TextBox Name="ToolIcon" HorizontalAlignment="Left" Height="23" Margin="85,40,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="197" AllowDrop="True" Drop="OnToolIconDrop" />
        <TextBox Name="test" HorizontalAlignment="Left" Height="158" Margin="10,70,0,0" TextWrapping="Wrap" Text="工具信息" VerticalAlignment="Top" Width="272" AllowDrop="True"/>
    </Grid>
</Window>
